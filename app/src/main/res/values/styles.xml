<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title text style   -->
    <style name="SignUpTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/signup_title_text_size</item>
    </style>

    <!-- Sub Title text style   -->
    <style name="SignUpSubTitleTextStyle">
        <item name="android:textColor">@color/signup_grey_fifty</item>
        <item name="android:textSize">@dimen/signup_subtitle_text_size</item>
    </style>

    <!-- Avatar Button style   -->
    <style name="SignUpAvatarBtnStyle">
        <item name="android:layout_width">@dimen/signup_display_pic_width</item>
        <item name="android:layout_height">@dimen/signup_display_pic_height</item>
        <item name="android:background">@color/signup_grey_fifty</item>

    </style>

    <!-- Avatar View style   -->
    <style name="SignUpAvatarViewStyle">
        <item name="android:layout_width">@dimen/signup_display_pic_width</item>
        <item name="android:layout_height">@dimen/signup_display_pic_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Signup Cta style   -->
    <style name="SignUpCtaMaterialStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/signup_cta_button_end</item>
        <item name="backgroundTint">@color/signup_cta_button_start</item>
        <item name="android:textSize">@dimen/signup_cta_text_size</item>
    </style>

    <!-- Confirmation Field style   -->
    <style name="ConfirmationFieldStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/confirmation_field_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Confirmation linkable field style   -->
    <style name="ConfirmationLinkedFieldStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/confirmation_field_text_size</item>
        <item name="android:autoLink">all</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>